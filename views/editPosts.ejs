<%- include('./layouts/header.ejs')%>

  <div class="main">
    <%- include('./layouts/navbar.ejs')%>
    <div class="container-fluid">
      <div class="page-title">
        <h1>更新文章</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger errorHide">
        <strong>错误！</strong>发生XXX错误
      </div>
      <form class="row" id="myForm">
        <input type='hidden' value='<%= id%>' name='id'>
        <div class="col-md-9">
          <div class="form-group">
            <label for="title">标题</label>
            <input id="title" class="form-control input-lg" value="<%= title%>" name="title" type="text" placeholder="文章标题">
          </div>
          <div class="form-group">
            <label for="content">内容</label>
            <textarea id="content" class="form-control input-lg"  name="content" cols="30" rows="10" placeholder="内容"><%= content%></textarea>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="slug">别名</label>
            <input id="slug" class="form-control" value="<%= slug%>" name="slug" type="text" placeholder="slug">
            <p class="help-block">https://zce.me/post/<strong>slug</strong></p>
          </div>
          <div class="form-group">
            <label for="feature">特色图像</label>
            <!-- show when image chose -->
            <img class="help-block thumbnail" src="<%= feature%>" <%if(!feature){%> style="display: none" <%}%>>
            <input id="feature" class="form-control" name="feature" type="file">
          </div>
          <div class="form-group">
            <label for="category">所属分类</label>
            <select id="category" class="form-control" name="category">
              <% categories.forEach(item=>{%>
              <option value="<%= item.id%>" <%if(item.id==category_id){%>selected<%}%> ><%= item.name%></option>
              <%})%>
            </select>
          </div>
          <div class="form-group">
            <label for="created">发布时间</label>
            <input id="created" class="form-control" value="<%= created.replace(' ','T')%>" name="created" type="datetime-local">
          </div>
          <div class="form-group">
            <label for="status">状态</label>
            <select id="status" class="form-control" name="status">
              <option value="drafted" <%if(status=='drafted'){%>selected<%}%> >草稿</option>
              <option value="published" <%if(status=='published'){%>selected<%}%>>已发布</option>
              <option value="trashed" <%if(status=='trashed'){%>selected<%}%>>废弃</option>
            </select>
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">更新</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('./layouts/asider.ejs')%>

  <%- include('./layouts/footer.ejs')%>

  <script>
    // 1.提交图片
    $('#feature').on('change', function(){
      var data = new FormData()
      data.append('avatar', this.files[0])

      // 发送ajax请求
      $.ajax({
        type: 'post',
        url: 'uploadFile',
        data: data,
        dataType: 'json',
        contentType: false,
        processData: false,
        success: function(res){
          if(res&&res.code==0){
            // 在页面中显示图片，并将路径存储在页面上
            $('.thumbnail').show().attr('src',res.src).after(`<input type='hidden' value='${res.src}' name='feature'>`)
          }
        }
      })
    })

    // 2.给form标签注册事件并发送ajax请求
    $('#myForm').on('submit', function(event){
      // 阻止默认提交行为
      event.preventDefault();
      // 发送ajax请求
      $.ajax({
        type: 'post',
        url: '/updatePosts',
        data: $(this).serialize(),
        dataType: 'json',
        success: function(res){
          if(res&&res.code==0){
            // 如果更新成功就跳转到所有文章页面
            location.href = '/posts'
          }
        }
      })
    })
  </script>